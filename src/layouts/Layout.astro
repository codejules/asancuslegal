---
import { ClientRouter } from "astro:transitions";

interface Props {
	description: string;
	title: string;
	currentLocale: string;
	ogDescription: string;
}

const { description, title, currentLocale, ogDescription } = Astro.props;
type Favicon = { url: string; media: string };
const FAVICON: Favicon[] = [
	{
		url: "/favicon-dark.svg",
		media: "(prefers-color-scheme: light)",
	},
	{
		url: "/favicon.svg",
		media: "(prefers-color-scheme: dark)",
	},
];

type Hero = { url: string; media: string };
const HERO: Hero[] = [
	{
		url: "/assets/img/asancuslegal-hero.webp",
		media: "(min-width: 768px)",
	},
	{
		url: "/assets/img/asancuslegal-hero-mobile.webp",
		media: "(max-width: 767px)",
	},
];

const ogImage = "https://test.asancuslegal.com/og.jpg";
---

<!doctype html>
<html lang={currentLocale === "es" ? "es" : "en"}>
	<head>
		<!-- high priority -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<!-- first preload -->
		{
			HERO.map(({ url, media }) => (
				<link
					rel="preload"
					fetchpriority="high"
					as="image"
					href={url}
					type="image/webp"
					media={media}
				/>
			))
		}

		<!-- meta data -->
		<title>{title}</title>

		{
			FAVICON.map(({ url, media }) => (
				<link
					rel="icon"
					type="image/svg+xml"
					href={url}
					media={media}
				/>
			))
		}
		<meta name="description" content={description} />

		<meta property="og:url" content="https://www.asancuslegal.com" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:image" content={ogImage} />

		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="www.asancuslegal.com" />
		<meta property="twitter:url" content="https://www.asancuslegal.com" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={ogDescription} />
		<meta name="twitter:image" content={ogImage} />
		<ClientRouter />
	</head>
	<body>
		<slot />
	</body>
</html>
