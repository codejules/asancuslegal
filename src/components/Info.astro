---
import Section from "@/layouts/Section.astro";
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Section>
    <div class="py-10 lg:py-20 max-w-screen-md md:mx-auto">
        <div
            class="px-6 md:px-10 text-pretty text-center font-base md:text-xl lg:text-2xl flex flex-col gap-4"
        >
            {
                typeof i18n.INFO_TITLE === "object" && (
                    <>
                        <p
                            class="text-balance"
                            set:html={i18n.INFO_TITLE.title}
                        />
                        <p
                            class="text-balance"
                            set:html={i18n.INFO_TITLE.subtitle}
                        />
                    </>
                )
            }
            <blockquote class="italic font-semibold">
                <h2>"{i18n.INFO_SUBTITLE}"</h3>
            </blockquote>
        </div>
    </div>
</Section>
