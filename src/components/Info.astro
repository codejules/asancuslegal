---
import Section from "@/layouts/Section.astro";
const { info, title, subtitle, quote } = Astro.props;
---

<Section>
    <div class="py-10 lg:py-20 max-w-screen-md md:mx-auto">
        <div
            class="px-6 md:px-10 text-pretty text-center font-base md:text-xl lg:text-2xl flex flex-col gap-4"
        >
            {
                typeof info === "object" && (
                    <>
                        <p set:html={title} />
                        <p set:html={subtitle} />
                    </>
                )
            }
            <blockquote class="italic font-semibold">
                <h2>"{quote}"</h2>
            </blockquote>
        </div>
    </div>
</Section>
