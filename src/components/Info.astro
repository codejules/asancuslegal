---
import Section from "@/layouts/Section.astro";
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Section>
    <div class="py-10 lg:py-20 max-w-screen-md md:mx-auto">
        <div
            class="px-8 md:px-22 text-pretty text-center font-base md:text-xl lg:text-2xl flex flex-col gap-3"
        >
            <h1 set:html={i18n.INFO_TITLE} />
            <h2>{i18n.INFO_SUBTITLE}</h2>
        </div>
    </div>
</Section>
