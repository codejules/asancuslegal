---
import Areas from "@/components/Areas.jsx";
import Contacto from "@/components/Contacto.astro";
import Equipo from "@/components/Equipo.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Hero from "@/components/Hero.astro";
import Info from "@/components/Info.astro";
import Soluciones from "@/components/Soluciones.astro";
import Slider from "@/components/Slider.astro";
import Layout from "@/layouts/Layout.astro";
import "@/styles/global.css";

import '@fontsource-variable/raleway';

import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
	title={i18n.SEO_TITLE}
	description={i18n.SEO_DESCRIPTION}
>
	<Header />
	<main>
		<Hero />
		<Info />
		<Areas client:visible currentLocale={currentLocale} />
		<Soluciones />
		<Equipo />
		<Slider />
		<Contacto />
	</main>
	<Footer />
</Layout>
