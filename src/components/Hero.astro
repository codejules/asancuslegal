---
import Section from "@/layouts/Section.astro";

import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Section>
    <div class="h-full w-full relative">
        <figure>
            <img
                src="/assets/img/asancuslegal-hero.webp"
                alt="Asancus Legal bufete abogados"
                class="absolute inset-0 w-full h-full object-cover"
                decoding="async"
                loading="eager"
            />
        </figure>
        <div
            class="py-36 lg:py-72 opacity-0 transform translate-y-10 transition-all duration-3000 ease-in"
            id="hero-content"
        >
            <div
                class="max-w-screen-md mx-auto text-center flex flex-col gap-4 justify-center items-center"
            >
                <h2 class="text-2xl md:text-4xl text-white">
                    {i18n.HERO_TITLE}
                </h2>
                <p class="text-white">
                    {i18n.HERO_PARAGRAPH}
                </p>
                <button
                    type="button"
                    class="cursor-pointer rounded-sm border px-6 py-3 min-h-[48px] min-w-[48px] bg-white hover:bg-primary hover:text-white hover:scale-105 transition duration-300 ease-in flex items-center justify-center text-base md:text-lg"
                >
                    <a href=`mailto:${i18n.HERO_EMAIL}`>{i18n.HERO_EMAIL}</a>
                </button>
            </div>
        </div>
    </div>
</Section>

<script>
    document.addEventListener("astro:page-load", () => {
        setTimeout(() => {
            const heroContent = document.getElementById("hero-content");
            if (heroContent) {
                heroContent.classList.remove("opacity-0", "translate-y-10");
                heroContent.classList.add("opacity-100", "translate-y-0");
            }
        }, 1000);
    });
</script>
