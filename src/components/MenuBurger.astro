---
import LanguageSelector from "./LanguageSelector";

import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const classItems =
    "hover:text-gray-500 transition ease-in duration-300 font-normal text-base block py-2 px-3 lg:p-0 text-slate-600";

type NavItems = {
    title: keyof typeof i18n.NAV;
    href: string;
};

const NAV_ITEMS: NavItems[] = [
    { title: "SERVICES", href: "#areas" },
    { title: "SOLUTIONS", href: "#soluciones" },
    { title: "TEAM", href: "#equipo" },
    { title: "CONTACT", href: "#contacto" },
];

const burgerLineClass =
    "nav-burguer-line bg-black block transition ease-in duration-300 w-6 h-[2px]";
const navList = `transition-top ease-in duration-500 z-50 fixed bg-white w-full shadow-md right-0 left-0 -top-full flex max-lg:gap-4 flex-col font-medium p-4 lg:p-0 rounded-lg lg:space-x-8 rtl:space-x-reverse
            lg:flex-row lg:mt-0 lg:border-0`;
---

<menu-burguer class="lg:hidden">
    <div>
        <ul id="nav-list" class={navList}>
            {
                NAV_ITEMS.map(({ title, href }) => (
                    <li id="nav-item" class="border-b-[1px] border-b-gray-400">
                        <a class={classItems} href={href}>
                            {i18n.NAV[title]}
                        </a>
                    </li>
                ))
            }
            <div>
                <LanguageSelector currentLocale={currentLocale} client:load />
            </div>
        </ul>

        <button
            id="nav-burguer"
            class="block cursor-pointer"
            aria-label="Menu Burger"
        >
            {[...Array(3)].map(() => <span class={burgerLineClass} />)}
        </button>
    </div>
</menu-burguer>

<script>
    import "@/scripts/menuBurger";
</script>

<style>
    @media (max-width: 1023px) {
        .nav-burguer-line {
            margin: 5px 0;
        }
        #nav-list {
            height: calc(50vh - 70px);
        }

        #nav-list.active {
            top: 3.6rem;
        }

        #nav-burguer.active .nav-burguer-line:nth-child(1) {
            transform: rotate(45deg) translate(4px, 4px);
        }

        #nav-burguer.active .nav-burguer-line:nth-child(2) {
            opacity: 0;
        }

        #nav-burguer.active .nav-burguer-line:nth-child(3) {
            transform: rotate(-45deg) translate(7px, -6px);
        }
    }
</style>
