---
import Section from "@/layouts/Section.astro";

const title = 'Soluciones Legales';
const paragraph = 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Iste earum hic repudiandae! Quidem eaque, quod qui nemo ipsam illo perferendis aut sed vitae libero quia aliquid error, similique at itaque.'

const image = "/src/assets/img/soluciones-asancus-legal.webp";
---

<Section>
    <div class="py-10 flex flex-col gap-6">
        <div class="flex flex-col gap-4">
            <h2 class="text-center text-2xl md:text-4xl">{title}</h2>
            <p class="text-sm px-4">
                {paragraph}
            </p>
        </div>
        <div class="px-12">
            <img class="rounded-2xl" src={image} alt="" title="" />
        </div>
    </div>
</Section>
