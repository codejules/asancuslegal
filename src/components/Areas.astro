---
import Section from "@/layouts/Section.astro";

const ACCORDIONS = [
    {
        number: "1",
        title: "Área Fiscal",
        image: "/src/assets/img/area-fiscal.webp",
        description:
            "Flowbite is an open-source library of interactive components built on top of Tailwind CSS including buttons, dropdowns, modals, navbars, and start developing websites even faster with components on top of Tailwind CSS.",
    },
    {
        number: "2",
        title: "Área Mercancil",
        image: "/src/assets/img/area-mercantil.webp",
        description:
            "Flowbite is an open-source library of interactive components built on top of Tailwind CSS including buttons, dropdowns, modals, navbars, and start developing websites even faster with components on top of Tailwind CSS.",
    },
];
---

<Section>
    <div class="bg-primary py-10">
        <h2 class="text-white text-center text-xl md:text-2xl">
            Nuestras principales Áreas
        </h2>

        <div
            class="pt-10 px-5 flex flex-col gap-5"
            id="accordion-collapse"
            data-accordion="collapse"
        >
            {
                ACCORDIONS.map(({ number, title, image, description }) => (
                    <h2 id={`accordion-collapse-heading-${number}`}>
                        <button
                            type="button"
                            class="border-t-1 pt-5 flex items-center gap-3 justify-start w-full font-medium"
                            data-accordion-target={`#accordion-collapse-body-${number}`}
                            aria-expanded="true"
                            aria-controls={`accordion-collapse-body-${number}`}
                        >
                            <span class="text-white">{number}</span>
                            <p class="text-white">{title}</p>
                        </button>
                    </h2>
                    <div
                        id={`accordion-collapse-body-${number}`}
                        class="hidden"
                        aria-labelledby={`accordion-collapse-heading-${number}`}
                    >
                        <div class="flex flex-col gap-3">
                            <img src={image} alt="" class="rounded-xl" />
                            <p class="text-white text-sm">{description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Section>
