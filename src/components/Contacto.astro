---
import Section from "@/layouts/Section.astro";
import Form from "./Form.js";

import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Section id="contacto">
    <div class="bg-primary">
        <div
            class="max-w-screen-xl mx-auto flex flex-col gap-12 py-10 lg:py-20 px-5"
        >
            <div class="flex flex-col justify-start gap-4 items-start">
                <h1 class="badge font-semibold">
                    {i18n.CONTACT_TITLE}
                </h1>
                <h2 class="text-xl lg:text-2xl font-light text-white">
                    {i18n.CONTACT_SUBTITLE}
                </h2>
            </div>
            <div class="w-full md:w-3/4 lg:w-1/2 mx-auto">
                <Form client:load />
            </div>
        </div>
    </div>
</Section>
